[Unit]
Description=Capture {{ application_name }} x11 Wine desktop output user service

[Service]
EnvironmentFile=/home/{{ application_user }}/rtsp/{{ application_name }}-video-capture-user-opts
WorkingDirectory=/home/{{ application_user }}/rtsp
ExecStart=/home/{{ application_user }}/bin/video-capture.sh $CAPTURE_OPTS
ExecStop=/bin/kill -2 $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
Restart=on-failure
RestartPreventExitStatus=255
PrivateTmp=true

[Install]
WantedBy=default.target
